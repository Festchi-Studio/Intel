generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  name       String?
  password   String
  role       Role     @default(TEAM_LEAD)
  createdAt  DateTime @default(now())
}

enum Role {
  PRODUCT_OWNER
  TEAM_LEAD
  PROJECT_MANAGER
  ENGINEERING_MANAGER
}

model Report {
  id         String   @id @default(cuid())
  title      String
  body       String
  createdAt  DateTime @default(now())
}